<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teams.TeamRentCoach"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/color_round"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="170dp"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="30dp"
                android:src="@drawable/coach_icon"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent Coach"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBottomOf="@id/logo"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/et_rent_coach_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="11dp"
            android:hint="Date"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/color_box" />
        <EditText
            android:id="@+id/et_rent_coach_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="11dp"
            android:hint="Time"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_rent_coach_date" />


        <EditText
            android:id="@+id/et_rent_coach_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="11dp"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_rent_coach_time" />

        <EditText
            android:id="@+id/et_rent_coach_purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="11dp"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="18dp"
            android:hint="Purpose"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_rent_coach_team" />
        <EditText
            android:id="@+id/et_rent_coach_ground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_round"
            android:drawablePadding="11dp"
            android:inputType="textAutoComplete"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="18dp"
            android:hint="Ground"
            android:enabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_rent_coach_purpose" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rent_coach_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_round"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom= "true"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_gravity="end"
            />

        <ProgressBar

            android:id="@+id/pBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/img_upload_ground_photos"
            android:layout_below="@+id/btnShow"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/progress"

            android:visibility="gone"/>

        <!--                    <LinearLayout-->
        <!--                        android:layout_width="match_parent"-->
        <!--                        android:layout_height="match_parent"-->
        <!--                        android:orientation="horizontal"-->
        <!--                        android:gravity="center"-->
        <!--                        android:layout_gravity="bottom"-->
        <!--                        >-->
        <!--                       -->


        <!--                    </LinearLayout>-->

    </LinearLayout>


</ScrollView>