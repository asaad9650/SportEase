<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteVar"
    android:paddingBottom="5dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_custom_layout"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="#fff"
    android:padding="15dp"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_user_id"
    android:textSize="16sp"
    android:textColor="#000"
    android:text="HI"
    />
<TextView
    android:id="@+id/recycler_user_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:text="HI"

    />

    <TextView
        android:id="@+id/recycler_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="HI"
        />

    <TextView
        android:id="@+id/recycler_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="HI"

        />

    <TextView
        android:id="@+id/recycler_user_cnic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="HI"

        />
    <TextView
    android:id="@+id/recycler_user_dob"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="#000"
    android:text="HI"

    />

    <TextView
        android:id="@+id/recycler_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="HI"

        />

    <TextView
        android:id="@+id/recycler_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="HI"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Delete"
        android:id="@+id/btn_recycler_user_delete"
        android:background="@drawable/button_round"

        tools:ignore="MissingClass" />



</LinearLayout>
</ScrollView>