<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/academy_item_layout"
    >


    <TextView
        android:id="@+id/upcoming_match_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Name : "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ground name : "
        android:textSize="18sp"
        android:id="@+id/upcoming_match_ground_name"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winning Price: "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_winning_price"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Captain: "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_team_captain"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Players: "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_other_players"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_status"
        android:textColor="#000"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starting Time : "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_starting_time"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opponent Team : "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_opponent_team"
        android:textColor="#000"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opponent Players : "
        android:textSize="16sp"
        android:id="@+id/upcoming_match_opponent_players"
        android:textColor="#000"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="horizontal"
    android:layout_gravity="center"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okay"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:background="@drawable/button_round"
        android:id="@+id/okay_button"
        android:textAlignment="center"
        android:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Postpone"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:background="@drawable/button_round"
        android:id="@+id/postpone_button"
        android:textAlignment="center"
        android:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:background="@drawable/button_round"
        android:id="@+id/cancel_match_button"
        android:textAlignment="center"
        android:visibility="visible"
        />
</LinearLayout>

</LinearLayout>