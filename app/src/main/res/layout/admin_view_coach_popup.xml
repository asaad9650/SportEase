<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteVar"
    android:paddingBottom="5dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#fff"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/admin_coach_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:src="@drawable/coach_icon"
        />

    <TextView
        android:id="@+id/txt_coach_S_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a sample popup window."
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/txt_coach_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:text="This is a sample popup window."
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txt_coach_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"

        />
    <TextView
        android:id="@+id/txt_coach_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"

        />
    <TextView
        android:id="@+id/txt_coach_expertise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textSize="16sp"

        android:textColor="#000"
        />
    <TextView
        android:id="@+id/txt_coach_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"

        />
    <TextView
        android:id="@+id/txt_coach_charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        />

</LinearLayout>

</ScrollView>