<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteVar"
    android:paddingBottom="5dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#fff"
    android:orientation="vertical">



    <TextView
        android:id="@+id/txt_user_ground_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a sample popup window."
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/txt_user_ground_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:text="This is a sample popup window."
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txt_user_ground_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"

        />
    <TextView
        android:id="@+id/txt_user_ground_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"

        />
    <TextView
        android:id="@+id/txt_user_ground_timings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:textSize="16sp"
        />




    <CheckBox
        android:textColor="#000"
        android:id="@+id/with_medical_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Trainer"
        ></CheckBox>
    <CheckBox
        android:textColor="#000"
        android:id="@+id/with_analyst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyst"
        ></CheckBox>

    <EditText
        android:id="@+id/ground_booking_purpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter purpose"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textColorHint="#000"
        android:textSize="15sp"
        android:textColor="#000"
        android:background="@drawable/edit_round"
        >

    </EditText>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_round"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Book now"
            android:textColor="#fff"

            />


    </LinearLayout>
</LinearLayout>
</ScrollView>